{% extends 'base.html.twig' %}

{% block title %}Palabras Clave{% endblock %}

{% block body %}
    <div class="row mb-3">
        <div class="col-xs-12">
            <a class="btn btn-primary" href="{{ path('palabra_clave_new') }}">Nueva Palabra clave</a>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Palabras Clave</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="tabla-identificador" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Activo</th>
                            <th>Fecha Creacion</th>
                            <th>Fecha Actualizacion</th>
                            <th>acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for palabra_clave in palabra_claves %}
                            <tr>
                                <td>{{ palabra_clave.id }}</td>
                                <td>{{ palabra_clave.nombre }}</td>
                                <td>{{ palabra_clave.activo ? 'Si' : 'No' }}</td>
                                <td>{{ palabra_clave.fechaCreacion ? palabra_clave.fechaCreacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ palabra_clave.fechaActualizacion ? palabra_clave.fechaActualizacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a class="btn btn-default btn-icon" href="{{ path('palabra_clave_show', {'id': palabra_clave.id}) }}"><i class="fa fa-eye"></i></a>
                                    <a class="btn btn-default btn-icon" href="{{ path('palabra_clave_edit', {'id': palabra_clave.id}) }}"><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-xs-12">
            {{ knp_pagination_render(palabra_claves) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-primary" href="{{ path('palabra_clave_new') }}">Nueva Palabra clave</a>
        </div>
    </div>
{% endblock %}
