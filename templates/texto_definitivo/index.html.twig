{% extends 'base.html.twig' %}

{% block title %}TextoDefinitivo index{% endblock %}

{% block body %}
    <h1>TextoDefinitivo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TextoDefinitivo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for texto_definitivo in texto_definitivos %}
            <tr>
                <td>{{ texto_definitivo.id }}</td>
                <td>       
                                {%if texto_definitivo.nombreArchivoTextoDefinitivo %}
                                    <a target="_blank" href="{{ asset('uploads/textos_definitivo/' ~ texto_definitivo.archivoTextoDefinitivo) }}">
                                    Texto
                                i class="fa fa-download"></i></a>
                                {% elseif %}
                                    {{ texto_definitivo.textoDefinitivo }}
                                {% endif %}
                </td>
                <td>
                    <a href="{{ path('texto_definitivo_show', {'id': texto_definitivo.id}) }}">show</a>
                    <a href="{{ path('texto_definitivo_edit', {'id': texto_definitivo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('texto_definitivo_new') }}">Create new</a>
{% endblock %}
