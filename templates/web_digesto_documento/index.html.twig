{% extends 'base.html.twig' %}

{% block title %}Web Documentos{% endblock %}

{% block body %}
    <div class="row mb-2">
        <div class="col-xs-12">
            <a class="btn btn-primary" href="{{ path('web_digesto_documento_new') }}">Nuevo Documento</a>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Documentos Web</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="tabla-tipoidentificador" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titulo</th>
                            <th>Grupo</th>
                            <th>Activo</th>
                            <th>Fecha Creacion</th>
                            <th>Fecha Actualizacion</th>
                            <th>acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for web_digesto_documento in web_digesto_documentos %}
                            <tr>
                                <td>{{ web_digesto_documento.id }}</td>
                                <td>{{ web_digesto_documento.titulo }}</td>
                                <td>{{ web_digesto_documento.grupo }}</td>
                                <td>{{ web_digesto_documento.activo ? 'Si' : 'No' }}</td>
                                <td>{{ web_digesto_documento.fechaCreacion ? web_digesto_documento.fechaCreacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ web_digesto_documento.fechaActualizacion ? web_digesto_documento.fechaActualizacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a class="btn btn-default btn-icon" href="{{ path('web_digesto_documento_show', {'id': web_digesto_documento.id}) }}"><i class="fa fa-eye"></i></a>
                                    <a class="btn btn-default btn-icon" href="{{ path('web_digesto_documento_edit', {'id': web_digesto_documento.id}) }}"><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-primary" href="{{ path('web_digesto_documento_new') }}">Nuevo Documento</a>
        </div>
    </div>


{% endblock %}
