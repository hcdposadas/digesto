{% extends '/Web/layout.html.twig' %}

{% block title %}{{ titulo }} -{% endblock title %}

{% block stylesheets %}
    <style>
        .well {
            background-color: #2e7d33;
            color: #fff;
        }

        a {
            text-decoration: none;
        }
    </style>
{% endblock stylesheets %}

{% block content %}
    <div class="page-header text-center">
        <h1>{{ titulo }}</h1>
    </div>
    <div class="container">
        <section>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    {% for documento in documentos %}
                        <div class="well text-center">{{ documento.grupo }}</div>
                        <div class="row">
                            <div class="col-md-12">
                                <ul>
                                    <li>
                                        <a href="{{ asset('uploads/documentos/documentos_web/' ~ documento.nombreDocumento) }}">{{ documento.titulo }}
                                            <i class="fa fa-download"></i></a>
                                    </li>
                                    {% for anexo in documento.anexos %}
                                        <li>
                                            <a href="{{ asset('uploads/documentos/documentos_anexos_web/' ~ anexo.nombreDocumentoAnexo) }}">{{ anexo.titulo }}
                                                <i class="fa fa-download"></i></a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>

                    {% endfor %}

                </div>
            </div>
        </section>
    </div>
{% endblock content %}


