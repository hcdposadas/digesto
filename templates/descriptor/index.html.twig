{% extends 'base.html.twig' %}

{% block title %}Descriptores{% endblock %}

{% block body %}

    <div class="row mb-3">
        <div class="col-xs-12">
            <a class="btn btn-primary" href="{{ path('descriptor_new') }}">Nuevo Descriptor</a>
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Descriptores</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="tabla-descriptor" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Activo</th>
                            <th>Fecha Creacion</th>
                            <th>Fecha Actualizacion</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for descriptor in descriptors %}
                            <tr>
                                <td>{{ descriptor.id }}</td>
                                <td>{{ descriptor.nombre }}</td>
                                <td>{{ descriptor.activo ? 'si' : 'No' }}</td>
                                <td>{{ descriptor.fechaCreacion ? descriptor.fechaCreacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ descriptor.fechaActualizacion ? descriptor.fechaActualizacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a class="btn btn-default btn-icon"
                                       href="{{ path('descriptor_show', {'id': descriptor.id}) }}"><i
                                                class="fa fa-eye"></i></a>
                                    <a class="btn btn-default btn-icon"
                                       href="{{ path('descriptor_edit', {'id': descriptor.id}) }}"><i
                                                class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-xs-12">
            {{ knp_pagination_render(descriptors) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-primary" href="{{ path('descriptor_new') }}">Nuevo Descriptor</a>
        </div>
    </div>
{% endblock %}
